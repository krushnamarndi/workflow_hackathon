// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  clerkId         String   @unique
  email           String   @unique
  firstName       String?
  lastName        String?
  profileImage    String?
  credits         BigInt   @default(0)  // 1M credits = $1
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  apiKeys         ApiKey[]
  creditLedger    CreditTransaction[]

  @@index([clerkId])
  @@map("users")
}

model Folder {
  id          String   @id @default(cuid())
  userId      String
  name        String
  parentId    String?
  parent      Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Folder[] @relation("FolderHierarchy")
  workflows   Workflow[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([parentId])
  @@map("folders")
}

model Workflow {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  data        Json     // Stores React Flow nodes, edges, and viewport
  folderId    String?
  folder      Folder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([folderId])
  @@map("workflows")
}

model WorkflowExecution {
  id            String    @id @default(cuid())
  workflowId    String
  userId        String
  nodeId        String
  runId         String?
  status        String    // 'pending', 'running', 'completed', 'failed'
  scope         String    @default("full")  // 'full', 'partial', 'single'
  input         Json?
  output        Json?
  error         String?
  provider      String?   // Which provider handled this execution
  creditCost    BigInt?   // Actual cost in credits
  estimatedCost BigInt?   // Pre-execution estimate
  durationMs    Int?      // Execution duration in milliseconds
  createdAt     DateTime  @default(now())
  completedAt   DateTime?

  @@index([workflowId])
  @@index([userId])
  @@index([runId])
  @@map("workflow_executions")
}

// ============================================================================
// API Key Management (for Public REST API)
// ============================================================================

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String    // Human-readable name for the key
  keyHash     String    @unique  // SHA-256 hash of the actual key
  keyPrefix   String    // First 8 chars for identification (e.g., "wv_live_")
  lastFour    String    // Last 4 chars for display
  scopes      String[]  // ['workflows:read', 'workflows:write', 'workflows:execute']
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  revokedAt   DateTime?

  @@index([userId])
  @@index([keyHash])
  @@map("api_keys")
}

// ============================================================================
// Credit Transaction Ledger
// ============================================================================

model CreditTransaction {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount        BigInt   // Positive = credit (topup), Negative = debit (usage)
  balance       BigInt   // Balance after this transaction
  type          String   // 'execution', 'topup', 'refund', 'adjustment', 'bonus'
  description   String   // Human-readable description
  executionId   String?  // Link to WorkflowExecution if applicable
  nodeId        String?  // Which node incurred this cost
  provider      String?  // Which provider was used
  metadata      Json?    // Additional metadata (invoice ID, etc.)
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([executionId])
  @@index([createdAt])
  @@map("credit_transactions")
}
